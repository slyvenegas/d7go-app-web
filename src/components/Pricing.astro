---
import { siteConfig } from '../config.ts';
import { Icon } from 'astro-icon/components';
---

<section
  id="pricing"
  class="border-mono-lighter bg-mono-lighter relative border-t-2 px-4 py-20 sm:px-6 lg:px-8"
>
  <div class="relative mx-auto max-w-7xl">

    {/* --- IMAGEN IZQUIERDA --- */}
    <img
      src="https://res.cloudinary.com/ddqgjf5wr/image/upload/v1763139925/WhatsApp_Image_2025-11-12_at_6.20.06_PM_1_wddkb5.jpg"
      alt="Forma decorativa irregular 1"
      width="300"
      height="300"
      loading="lazy"
      class="absolute top-1/4 left-0 z-0 hidden -translate-x-1/2 rotate-12 rounded-xl opacity-70 md:block"
    />

    {/* --- IMAGEN DERECHA --- */}
    <img
      src="https://res.cloudinary.com/ddqgjf5wr/image/upload/v1763140321/WhatsApp_Image_2025-11-12_at_6.20.06_PM_ek7nch.jpg"
      alt="Forma decorativa irregular 2"
      width="400"
      height="300"
      loading="lazy"
      class="absolute top-1/4 right-4 left-4/7 z-0 hidden translate-x-1/2 rounded-xl shadow-2xl md:block"
    />

    {/* ---contenido de precios --- */}
    <div class="relative z-10">
      {/* <-- 'z-10' para estar sobre las imágenes 'z-0' */}
      <div class="scroll-fade-up mx-auto mb-16 max-w-3xl text-center">
        <h2 class="text-mono-black mb-4 text-4xl font-bold sm:text-5xl">
          {siteConfig.pricing.title}
        </h2>
        <p class="text-mono-dark text-xl">
          {siteConfig.pricing.subtitle}
        </p>
      </div>

      <div class="mx-auto grid max-w-6xl grid-cols-1 gap-8 md:grid-cols-3">
        {
          siteConfig.pricing.plans.map((plan, index) =>
            plan.featured ? (
              <div class="scroll-fade-up border-mono-black scale-105 transform rounded-xl border-4 p-8 shadow-2xl">
                <div class="bg-mono-black rounded-xl p-8">
                  <div class="pulse-slow text-mono-black mb-4 inline-block rounded-full bg-white px-3 py-1 text-xs font-semibold">
                    {plan.badge}
                  </div>
                  <h3 class="mb-2 text-2xl font-bold text-white">
                    {plan.name}
                  </h3>
                  <div class="mb-6">
                    <span class="text-4xl font-bold text-white">
                      {plan.price}
                    </span>
                    <span class="text-mono-light">{plan.period}</span>
                  </div>
                  <p class="text-mono-light mb-6">{plan.description}</p>

                  <ul class="mb-8 space-y-4">
                    {plan.features.map((feature) => (
                      <li class="flex items-start">
                        <Icon
                          name="heroicons:check"
                          class="mt-0.5 mr-3 h-5 w-5 flex-shrink-0 text-white"
                        />
                        <span class="text-white">{feature}</span>
                      </li>
                    ))}
                  </ul>

                  {/* CTA Conductor (YA EXISTENTE) */}
                  <button
                    type="button"
                    class="text-mono-black block w-full rounded-lg bg-yellow-400 px-6 py-3 text-center font-semibold pricing-modal-trigger"
                  >
                    {plan.cta.text}
                  </button>

                  {/* CTA NUEVO → PASAJERO */}
                  {/* <button
                    type="button"
                    class="mt-4 block w-full rounded-lg bg-yellow-400 px-6 py-3 text-center font-semibold pricing-modal-trigger-passenger"
                  >
                    Descarga tu App
                  </button> */}
                </div>
              </div>
            ) : (
              <div
                class={`${index === 0 ? 'scroll-fade-left' : 'scroll-fade-right'} border-mono-lighter rounded-xl border-2 bg-white p-8`}
              >
                <h3 class="text-mono-black mb-2 text-2xl font-bold">
                  {plan.name}
                </h3>
                <div class="mb-6">
                  <span class="text-mono-black text-4xl font-bold">
                    {plan.price}
                  </span>
                  <span class="text-mono-gray">{plan.period}</span>
                </div>
                <p class="text-mono-dark mb-6">{plan.description}</p>
                <ul class="mb-8 space-y-4">
                  {plan.features.map((feature) => (
                    <li class="flex items-start">
                      <Icon
                        name="heroicons:check"
                        class="text-mono-black mt-0.5 mr-3 h-5 w-5 flex-shrink-0"
                      />
                      <span class="text-mono-dark">{feature}</span>
                    </li>
                  ))}
                </ul>

                {/* CTA Conductor (ya existente) */}
                {/* <button
                  type="button"
                  class="border-mono-black text-mono-black block w-full rounded-lg border-2 bg-white px-6 py-3 text-center font-semibold pricing-modal-trigger"
                >
                  {plan.cta.text}
                </button> */}

                {/* CTA nuevo (Pasajero) */}
                <button
                  type="button"
                  class="mt-4 block w-full rounded-lg bg-mono-black text-white px-6 py-3 text-center font-semibold pricing-modal-trigger-passenger"
                >
                  Descargar la App
                </button>
              </div>
            ),
          )
        }
      </div>
    </div>
  </div>
</section>

{/* ======================================================= */}
{/*  MODAL CONDUCTOR (EL QUE YA FUNCIONABA)                */}
{/* ======================================================= */}

<div
  id="modalOverlayPricing"
  class="fixed inset-0 z-[55] hidden bg-black/60 backdrop-blur-sm"
  aria-hidden="true"
></div>

<div
  id="qrModalPricing"
  class="fixed z-[60] top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 hidden w-full max-w-md transform rounded-2xl bg-white p-8 shadow-2xl"
  role="dialog"
  aria-modal="true"
  aria-hidden="true"
>
  <button
    id="closeModalButtonPricing"
    class="absolute top-4 right-4 text-gray-400 hover:text-gray-600"
    aria-label="Cerrar modal"
  >
    <Icon name="heroicons:x-mark" class="h-6 w-6" />
  </button>

  <div class="flex flex-col items-center text-center bg-gray-200">
    <div class="mb-4 flex items-center space-x-3">
      <img class="h-12 w-22"
        src="https://res.cloudinary.com/ddqgjf5wr/image/upload/v1763148433/logo1_guhvc9.png"
        alt="Logo D7GO"
      />
      <div>
        <p class="text-left text-sm font-semibold text-gray-900">App D7GO Conductor</p>
        <p class="text-left text-xs text-yellow-500">★★★★★</p>
      </div>
    </div>

    <h2 class="mb-4 text-2xl font-bold text-gray-900">Apunta la cámara de tu teléfono al código QR</h2>

    <img
      id="pricingModalQrImage"
      src="https://res.cloudinary.com/ddqgjf5wr/image/upload/v1763229769/d7go-conductor-qr_luulvd.png"
      alt="Código QR Conductor"
      class="h-64 w-64 rounded-lg border"
    />

    <p class="mt-4 text-sm text-gray-600">Escanea el código QR con la cámara.</p>
  </div>
</div>

{/* ======================================================= */}
{/*  MODAL PASAJERO (NUEVO)                                */}
{/* ======================================================= */}

<div
  id="modalOverlayPricingPassenger"
  class="fixed inset-0 z-[55] hidden bg-black/60 backdrop-blur-sm"
></div>

<div
  id="qrModalPricingPassenger"
  class="fixed z-[60] top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 hidden w-full max-w-md transform rounded-2xl bg-white p-8 shadow-2xl"
  aria-modal="true"
  aria-hidden="true"
>
  <button
    id="closeModalButtonPricingPassenger"
    class="absolute top-4 right-4 text-gray-400 hover:text-gray-600"
  >
    <Icon name="heroicons:x-mark" class="h-6 w-6" />
  </button>

  <div class="flex flex-col items-center text-center bg-gray-200">
    <div class="mb-4 flex items-center space-x-3">
      <img class="h-12 w-22"
        src="https://res.cloudinary.com/ddqgjf5wr/image/upload/v1763148433/logo1_guhvc9.png"
        alt="Logo D7GO"
      />
      <div>
        <p class="text-left text-sm font-semibold text-gray-900">App D7GO Pasajero</p>
        <p class="text-left text-xs text-yellow-500">★★★★★</p>
      </div>
    </div>

    <h2 class="mb-4 text-2xl font-bold text-gray-900">Escanea para descargar la app</h2>

    <img
      src="https://res.cloudinary.com/ddqgjf5wr/image/upload/v1763229417/d7go-pasajero-qr_u9azos.png"
      alt="Código QR Pasajero"
      class="h-64 w-64 rounded-lg border"
    />

    <p class="mt-4 text-sm text-gray-600">Escanea el código QR con la cámara.</p>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {

    // ========== CONDUCTOR ==========
    const modalTriggers = document.querySelectorAll('.pricing-modal-trigger');
    const modalOverlay = document.getElementById('modalOverlayPricing');
    const qrModal = document.getElementById('qrModalPricing');
    const closeModalButton = document.getElementById('closeModalButtonPricing');

    const openModal = () => {
      qrModal.classList.remove('hidden');
      modalOverlay.classList.remove('hidden');
    };

    const closeModal = () => {
      qrModal.classList.add('hidden');
      modalOverlay.classList.add('hidden');
    };

    modalTriggers.forEach(trigger => trigger.addEventListener('click', openModal));
    closeModalButton.addEventListener('click', closeModal);
    modalOverlay.addEventListener('click', closeModal);

    // ========== PASAJERO ==========
    const modalTriggersPassenger = document.querySelectorAll('.pricing-modal-trigger-passenger');
    const modalOverlayPassenger = document.getElementById('modalOverlayPricingPassenger');
    const qrModalPassenger = document.getElementById('qrModalPricingPassenger');
    const closeModalPassenger = document.getElementById('closeModalButtonPricingPassenger');

    const openModalPassenger = () => {
      qrModalPassenger.classList.remove('hidden');
      modalOverlayPassenger.classList.remove('hidden');
    };

    const closeModalPassengerFunc = () => {
      qrModalPassenger.classList.add('hidden');
      modalOverlayPassenger.classList.add('hidden');
    };

    modalTriggersPassenger.forEach(btn => btn.addEventListener('click', openModalPassenger));
    closeModalPassenger.addEventListener('click', closeModalPassengerFunc);
    modalOverlayPassenger.addEventListener('click', closeModalPassengerFunc);

    // ========== ⭐ NUEVO: cerrar cualquiera de los modales con ESC ==========
    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape') {
        closeModal();              // Cerrar modal conductor si está abierto
        closeModalPassengerFunc(); // Cerrar modal pasajero si está abierto
      }
    });

  });
</script>
